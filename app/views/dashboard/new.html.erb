<div class="pageheader">
  <h1>클래스 만들기</h1>
</div>
<section id="main-content" class="animated fadeInUp">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">클래스 정보 입력하기</h3>
          <div class="actions pull-right">
            <i class="fa fa-chevron-down"></i>
            <i class="fa fa-times"></i>
          </div>
        </div>
        <div class="panel-body">
            <%=form_tag('/dashboard/create', method: :post, class: "form-horizontal form-border", id: "new-class-form")%>
            <div class="form-group">
              <label class="col-sm-3 control-label">클래스명</label>
              <div class="col-sm-6">
                <input type="text" class="form-control" name="class_name" id="class_name" required="" placeholder="[서울대학교] 경제학개론 2015-1">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">클래스정보</label>
              <div class="col-sm-6">
                <textarea class="form-control" name="class_desc" id="class_desc"
                  placeholder="2015. 3. 3 ~ 6.20 월수금 09:30~12:00
경제학의 기본에 대해 배웁니다"></textarea>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-6">
                <button type="submit" class="btn btn-primary">만들기</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<% content_for :javascript do %>
  <!--Load these page level functions-->
<script>
  $(document).ready(function() {
      app.formValidation();
      });
</script>
<% end %>
