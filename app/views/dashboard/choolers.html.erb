<div class="pageheader">
  <h1>출석부</h1>
</div>
<section id="main-content" class="animated fadeInUp">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Chooler Add</h3>
          <div class="actions pull-right">
            <i class="fa fa-chevron-down"></i>
            <i class="fa fa-times"></i>
          </div>
        </div>
        <div class="panel-body">
          <%=form_tag('/dashboard/add_chooler', method: :post, class: "form-horizontal form-border", id: "add-chooler-form")%>
          <div class="form-group">
            <input type="hidden" name="class_id" value="<%=@class_id%>">
              <div class="col-sm-2">
                <input type="text" class="form-control" name="name" placeholder="이름">
              </div>
              <div class="col-sm-2">
                <input type="text" class="form-control" name="dept" placeholder="소속">
              </div>
              <div class="col-sm-2">
                <input type="text" class="form-control" name="code" placeholder="학번">
              </div>
              <div class="col-sm-2">
                <input type="text" class="form-control" name="email" placeholder="이메일">
              </div>
              <div class="col-sm-2">
                <button type="submit" class="btn btn-primary">추가</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Chooler List</h3>
          <div class="actions pull-right">
            <i class="fa fa-chevron-down"></i>
            <i class="fa fa-times"></i>
          </div>
        </div>
        <div class="panel-body" style="overflow: auto">
          <table id="list" class="table table-striped table-bordered" cellspacing="0" width="100%" style="overflow: auto">
            <thead>
              <tr>
                <th>#</th>
                <th>이름</th>
                <th>소속</th>
                <th>학번</th>
                <th>이메일</th>
                <th>3.1</th>
              </tr>
            </thead>

            <tbody>
              <% @choolers.each_with_index do |c, index|%>
                <tr>
                  <td><%=index+1%></td>
                  <td><%=c.user.name%></td>
                  <td><%=c.user.dept%></td>
                  <td><%=c.user.code%></td>
                  <td><%=c.user.email%></td>
                  <td>ㅇㅇㅇ</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>


<% content_for :javascript do %>
  <!--Load these page level functions-->
<script>
  $(document).ready(function() {
      $('#list').dataTable();
      });
</script>
<% end %>
